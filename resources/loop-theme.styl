// ------------------------
// L I G H T S
// ------------------------

.cm-s-loop-light
  
  $maincolor   = #444
  $secondcolor = #DB8484
  $comment     = #A4C7B3

  // Main
  &.CodeMirror 
    color  $maincolor

  .cm-property
    color  $maincolor !important
    box-shadow none !important
    background transparent !important

  // Line highlight
  .CodeMirror-activeline-background
    background #f9f9f9

  // Content/values
  .cm-atom,
  .cm-number, 
  .cm-string
    color $redcolor
    // color #2560DB
    // color       rgb(0, 163, 255)
    // color       #000
    // font-weight 500

  // function and var definitions
  .cm-keyword,
  .cm-kw-special
    color       #333

  .cm-tag,
  .cm-attribute,
  .cm-equals
    color $secondcolor

  .cm-comment 
    color #bbb

  .CodeMirror-lint-message-error,
  .CodeMirror-lint-message-warning
    color #bbb

  .console-log-marker
    color $activetext
    -webkit-animation  decaylight 0.2s;

  .CodeMirror-lines pre:hover
    background: rgba(yellow, 0.1)

  // .CodeMirror-lines pre:nth-child(even)
  //   background: rgba(0,0,0,0.02);

  .cm-attrval-href,
  .cm-attrval-src
    border-bottom 1px solid rgba(0,0,0,0.2)


@-webkit-keyframes decaydark {
  0% {
    color: white;
  }
}

@-webkit-keyframes decaylight {
  0% {
    color: blue;
  }
}



