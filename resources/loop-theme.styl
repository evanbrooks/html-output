// Main tag
.cm-s-loop-light
  
  $maincolor   = #777
  $secondcolor = #3B91C2

  // Main
  &.CodeMirror 
    color  $maincolor
    font   400 14px/1.3 "Source Code Pro", "Consolas", "Ubuntu Mono"

  .cm-property
    color  $maincolor !important

  // Line highlight
  .CodeMirror-activeline-background
    background #f9f9f9

  // Content/values
  .cm-atom,
  .cm-number,
  .cm-string
    color       rgb(177, 3, 16) 
    color       rgb(0, 163, 255)
    color       #000
    font-weight 500

  // function and var definitions
  .cm-keyword,
  .cm-kw-special
    // color       black
    font-weight 600

  .cm-kw-special
    // font-style italic

  // variables (these will be recolored)
  .cm-def,
  .cm-variable,
  .cm-variable-2,
  .cm-variable-3
    color        brown
    font-weight  600


  .cm-tag,
  .cm-attribute
    color $secondcolor

  .cm-comment 
    color       #7DB696
    font-weight 400


