.slider
  display: inline-block
  height: 12px
  width: 6ch
  position: relative
  cursor: ew-resize
  -webkit-user-select: none
  opacity 0.8
  &:focus
    opacity: 1
    outline: none
    .slider-rail
      background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(blue,0)), color-stop(50%,rgba(blue,1)), color-stop(100%,rgba(blue,0))) //$color
    .slider-thumb
      border-color: blue
    & + span
      color: blue
  &:hover
    opacity: 1
    .slider-thumb
      background: lighten($redcolor, 55)
      //top: -2px
      //height: 18px
    .slider-rail
      height: 50px
      top: -20px
  &.dragging
    opacity: 1
    .slider-rail
      height: 200px
      top: -95px
      -webkit-transition: none


.slider-thumb
  height: 9px
  width: 9px
  border: 1px solid $redcolor
  border-radius: 2px
  background: $bg
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  margin: auto
  margin-top 3px
  -webkit-transition: all 0.1s
  &:before
    content: ""
    display  block
    width    5.5ch
    z-index  -1
    top 3px
    position relative
    left -19px
    border-bottom: 1px solid $redcolor
    opacity: 0.5

.slider-rail
  height: 20px
  width: 1px
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba($redcolor,0)), color-stop(50%,rgba($redcolor,1)), color-stop(100%,rgba($redcolor,0))) //$color
  position: absolute
  top: -3px
  left: 7px
  margin: auto
  -webkit-transition: all 0.1s


.cm-s-loop-dark
  .slider-thumb
    background $darkbg

  .slider
    .slider-thumb
      border-color $greencolor
      &:before
        border-color $greencolor
    &:hover
      opacity: 1
      .slider-thumb
        background: darken($greencolor, 25)










