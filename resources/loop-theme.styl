    background transparent !important

  .CodeMirror-activeline-background
    background rgba(255,255,255,0.02)

  .cm-atom,
  .cm-number, 
  .cm-string
    // color #C97B62
    // orange
    color $greencolor

  .cm-comment 
    color $commentdark

  .cm-keyword,
  .cm-kw-special
    // color rgb(214, 214, 214)

  .cm-tag,
  .cm-attribute,
  .cm-equals
    color #BE6464

  .CodeMirror-lint-message-error,
  .CodeMirror-lint-message-warning,
