.cm-mode-scss .cm-s-loop-light .CodeMirror-activeline-background {
  background: rgba(255, 153, 0, 0.03);
}

.cm-mode-js .cm-s-loop-light .CodeMirror-activeline-background {
  background: rgba(0, 163, 255, 0.03);
}


.cm-mode-html .cm-s-loop-light.CodeMirror {
  color: black;
}

// Main tag
.cm-s-loop-light
  
  // Main
  &.CodeMirror 
    color  #888
    font   14px/1.3 "Ubuntu-Mono"

  // Line highlight
  .CodeMirror-activeline-background
    background #f9f9f9

  // Content/values
  .cm-atom,
  .cm-number,
  .cm-string
    color rgb(177, 3, 16)

  // function and var definitions
  .cm-kw-special
    font-style italic

  // variables (these will be recolored)
  .cm-def,
  .cm-variable,
  .cm-variable-2,
  .cm-variable-3
    color        brown
    font-weight  bold



