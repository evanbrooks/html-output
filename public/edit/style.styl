* 
  margin: 0
  padding: 0
  font: inherit
  -webkit-box-sizing: border-box
  box-sizing: border-box
  font: inherit
  // -webkit-font-smoothing: antialiased
  text-rendering: optimizeLegibility
  -webkit-user-select: none

$color = black
//#A1B0C6
$bg = white
//#2F353F

body, html
  overflow: hidden
  height: 100%

body
  margin: 0px
  background: $bg
  padding-top: 2em
  color: #4C6770 //$color
  font: 400 14px/1.4 "National"
  font: 400 12px/1.4 "Lucida Grande"


